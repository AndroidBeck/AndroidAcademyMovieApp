<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:layout_marginStart="@dimen/start_end_margin"
    android:layout_marginEnd="@dimen/start_end_margin"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img_actor"
        android:layout_width="@dimen/actor_avatar_width"
        android:layout_height="@dimen/actor_avatar_height"
        android:layout_marginStart="@dimen/start_end_margin"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1,1"
        tools:src="@drawable/actor_avatar_robert_downey_jr"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/actor1_name_tools"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_actor_name"
        app:layout_constraintEnd_toEndOf="@+id/img_actor"
        app:layout_constraintStart_toStartOf="@+id/img_actor"
        app:layout_constraintTop_toBottomOf="@+id/img_actor" />

</androidx.constraintlayout.widget.ConstraintLayout>